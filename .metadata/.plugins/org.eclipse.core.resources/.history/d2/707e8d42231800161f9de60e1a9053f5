
public class KPP {
	
	public static void main(String[] args) {
		
		Car[] cars = new Car[6];
		PassengerVehicle pv;
		CargoVehicle cv;
		int idx = 0;
		//PassengerVehicle[] passcars = new PassengerVehicle[3];
		
		pv = new PassengerVehicle();
		cv = new CargoVehicle();
		
		pv.name = "Лада";
		pv.speed = 90;
		pv.specTransp = true;
		cars[0] = new PassengerVehicle();
		cars[0] = pv;
		idx += 1;
		
		//passcars[1] = new PassengerVehicle();
		pv.name = "Honda";
		pv.specTransp = false;
		pv.speed = 110;
		cars[1] = new PassengerVehicle();
		cars[1] = pv;
		idx ++;
		
		//passcars[2] = new PassengerVehicle();
		pv.name = "Mercedes";
		pv.specTransp = false;
		pv.speed = 200;
		cars[2] = new PassengerVehicle();
		cars[2] = pv;
		idx ++;
		
		//CargoVehicle[] cargcars = new CargoVehicle[3];

		//cargcars[0] = new CargoVehicle();
		cv.name = "Камаз";
		cv.speed = 60;
		cv.specTransp = true;
		cv.height = 3;
		cv.isTrailer = false;
		cv.weight = 5;
		cars[idx] = new CargoVehicle();
		cars[idx] = cv;
		idx ++;
		
		//cargcars[1] = new CargoVehicle();
		cv.name = "MAN";
		cv.height = 4;
		cv.isTrailer = true;
		cv.specTransp = false;
		cv.speed = 90;
		cv.weight = 15;
		cars[idx] = new CargoVehicle();
		cars[idx] = cv;
		idx ++;
		
		//cargcars[2] = new CargoVehicle();
		cv.name = "IVECO";
		cv.height = 5;
		cv.isTrailer = false;
		cv.specTransp = false;
		cv.speed = 50;
		cv.weight = 15;
		cars[idx] = new CargoVehicle();
		cars[idx] = cv;
		idx ++;
		
		for (Car allCars : cars){
			try {		
				allCars.printCarInfo();//Информация об автомобиле
				System.out.println("Стоимость проезда: " + allCars.calculateTarif() + " руб.");
			}
			catch (RuntimeException e) {
				System.out.println("Исключение времени выполнения: " + e);
			}
			finally {
				System.out.println();
			}
			
		}
/*
