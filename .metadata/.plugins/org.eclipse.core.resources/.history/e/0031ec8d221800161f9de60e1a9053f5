
public class KPP {
	
	public static void main(String[] args) {
		
		Car[] cars = new Car[6];
		PassengerVehicle pv;
		CargoVehicle cv;
		int idx = 0;
		//PassengerVehicle[] passcars = new PassengerVehicle[3];
		
		pv = new PassengerVehicle();
		cv = new CargoVehicle();
		
		pv.name = "Лада";
		pv.speed = 90;
		pv.specTransp = true;
		cars[idx] = new PassengerVehicle();
		cars[idx] = pv;
		idx ++;
		
		//passcars[1] = new PassengerVehicle();
		pv.name = "Honda";
		pv.specTransp = false;
		pv.speed = 110;
		cars[idx] = new PassengerVehicle();
		cars[idx] = pv;
		idx ++;
		
		//passcars[2] = new PassengerVehicle();
		pv.name = "Mercedes";
		pv.specTransp = false;
		pv.speed = 200;
		cars[idx] = new PassengerVehicle();
		cars[idx] = pv;
		idx ++;
		
		//CargoVehicle[] cargcars = new CargoVehicle[3];

		//cargcars[0] = new CargoVehicle();
		cv.name = "Камаз";
		cv.speed = 60;
		cv.specTransp = true;
		cv.height = 3;
		cv.isTrailer = false;
		cv.weight = 5;
		
		//cargcars[1] = new CargoVehicle();
		cv.name = "MAN";
		cv.height = 4;
		cv.isTrailer = true;
		cv.specTransp = false;
		cv.speed = 90;
		cv.weight = 15;
		
		cargcars[2] = new CargoVehicle();
		cargcars[2].name = "IVECO";
		cargcars[2].height = 5;
		cargcars[2].isTrailer = false;
		cargcars[2].specTransp = false;
		cargcars[2].speed = 50;
		cargcars[2].weight = 15;
		
		for (PassengerVehicle ps : passcars){
			try {		
				ps.printcarinfo();//Информация об автомобиле
				System.out.println("Стоимость проезда: " + ps.calculatetarif() + " руб.");
			}
			catch (RuntimeException e) {
				System.out.println("Исключение времени выполнения: " + e);
			}
			finally {
				System.out.println();
			}
			
		}

		for (CargoVehicle cr : cargcars){
			try {		
				cr.printcarinfo();//Информация об автомобиле
				System.out.println("Стоимость проезда: " + cr.calculatetarif() + " руб.");
			}
			catch (RuntimeException e) {
				System.out.println("Исключение времени выполнения: " + e);
			}
			finally {
				System.out.println();
			}
			
		}

		
		

			
		
	}

}
