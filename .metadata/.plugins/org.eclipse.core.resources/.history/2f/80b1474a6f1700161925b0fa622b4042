
public class PassengerVehicle extends Car {
	//Легковые автомобили

	//Метод контроля высоты автомобиля
	public void controlheight() {
		
	}
	//Метод контроля скорости автомобиля
	public int controlspeed() {
		RuntimeException se;
		if (Speed > 180) {
			se = new RuntimeException("Превышение максимальной скорости. Вызываем патруль ГИБДД.");
			throw se;
		}
		else {
			if (Speed > 80) {
				return 500; //Штраф 500 руб.
			}
			else return 0;
			
		}
	}
		
	//Расчет стоимости проезда
	public int calculatetarif() {
		int result;
		
		if (super.SpecTransp) return 0;
		else {
			//Контроль скорости:
			result=controlspeed();
			//Для легковых авто стоимость проезда - 1000 руб.
			result+=1000;
			return result;
		}
				
				
		
	}
	
	//Вывод информации об автомобиле
	public void printcarinfo() {
			System.out.println("Наименование автомобиля: " + super.Name);
			System.out.println("Спецтранспорт: " + (super.SpecTransp ? "Да" : "Нет"));
			System.out.println("Скорость автомобиля: " + super.Speed + " км/ч");
		}
}
